{
    "name": "hummer2k/convarnish",
    "description": "laminas-mvc varnish integration using ConLayout for ESI blocks.",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "keywords": [
        "laminas",
        "mvc",
        "cache",
        "varnish",
        "esi"
    ],
    "authors": [
        {
            "name": "Cornelius Adams",
            "email": "cornelius.adams@conlabz.de",
            "homepage": "http://www.conlabz.de/"
        }
    ],
    "require": {
        "php": "^7.2",
        "laminas/laminas-eventmanager": "^3.0",
        "laminas/laminas-modulemanager": "^2.7",
        "laminas/laminas-mvc": "^3.0",
        "laminas/laminas-servicemanager": "^3.4",
        "laminas/laminas-view": "^2.11",
        "laminas/laminas-dependency-plugin": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "laminas/laminas-serializer": "2.*",
        "laminas/laminas-log": "2.*",
        "laminas/laminas-i18n": "2.*",
        "hummer2k/conlayout": "dev-zf3",
        "satooshi/php-coveralls": "~0.6",
        "phpunit/phpunit": "^8.5"
    },
    "suggest": {
        "hummer2k/conlayout": "To use ESI processing feature."
    },
    "autoload": {
        "psr-4": {
            "ConVarnish\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ConVarnishTest\\": "tests/"
        }
    }
}
